{
  "openapi": "3.1.0",
  "info": {
    "title": "User Service API",
    "version": "0.1.0",
    "description": "OpenAPI documentation for user-related endpoints."
  },
  "paths": {
    "/users": {
      "post": {
        "summary": "Create a user",
        "description": "Accepts user details and creates a new user record.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "description": "User creation payload.",
                "example": {
                  "email": "user@example.com",
                  "name": "Taylor"
                },
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "name": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "null"
                      }
                    ]
                  },
                  "password": {
                    "description": "Plain text password that is hashed before persistence.",
                    "type": "string",
                    "minLength": 12
                  }
                },
                "required": [
                  "email",
                  "password"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully created.",
            "content": {
              "application/json": {
                "schema": {
                  "description": "Representation of the newly created user.",
                  "example": {
                    "id": 1,
                    "email": "user@example.com",
                    "name": "Taylor"
                  },
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "minimum": -9007199254740991,
                      "maximum": 9007199254740991
                    },
                    "email": {
                      "type": "string"
                    },
                    "name": {
                      "anyOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "null"
                        }
                      ]
                    }
                  },
                  "required": [
                    "id",
                    "email",
                    "name"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "description": "The request payload was invalid."
          },
          "401": {
            "description": "The request was not authorized."
          }
        }
      }
    }
  }
}