generator client {
  provider = "prisma-client-js"
  output   = "../src/persistence/generated/prisma"
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "../src/persistence/generated/zod"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  name           String?
  hashedPassword String
}
